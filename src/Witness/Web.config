<?xml version="1.0"?>
<configuration>
    <configSections>
        <section name="knapsack" type="Knapsack.Configuration.KnapsackSection, Knapsack"/>
    </configSections>

    <knapsack moduleMode="Off">
        <scripts>
            <add path="scripts/*"/>
        </scripts>
        <styles>
            <add path="styles"/>
        </styles>
    </knapsack>

    <system.web>
        <compilation debug="true" targetFramework="4.0" />
    </system.web>
    
    <system.webServer>
        <validation validateIntegratedModeConfiguration="false"/>
        
        <modules runAllManagedModulesForAllRequests="true">
            <add name="Knapsack"
                 type="Knapsack.Web.KnapsackHttpModule, Knapsack"
                 preCondition="managedHandler"/>
        </modules>
        
        <handlers>
            <add name="Knapsack"
                 verb="GET"
                 path="knapsack.axd"
                 type="Knapsack.Web.KnapsackHttpHandler, Knapsack"/>
        </handlers>
        
        <staticContent>
            <mimeMap fileExtension=".coffee" mimeType="text/plain"/>
        </staticContent>
    </system.webServer>
</configuration>
